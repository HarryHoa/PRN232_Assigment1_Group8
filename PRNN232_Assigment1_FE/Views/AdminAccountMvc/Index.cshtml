namespace PRNN232_Assigment1_FE.Views.AdminAccountMvc
@model List<AdminAccountViewModel>

@{
    ViewData["Title"] = "Account List";
}

<h2>Account List</h2>

<!-- Form Search -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="keyword" value="@ViewBag.Keyword" class="form-control mr-2" placeholder="Search by name or email..." />
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Reset</a>
</form>

<!-- Nút Create -->
<a asp-action="Create" class="btn btn-success mb-3">+ Create New Account</a>

<!-- Bảng danh sách -->
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model)
        {
            <tr>
                <td>@acc.AccountId</td>
                <td>@acc.AccountName</td>
                <td>@acc.AccountEmail</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@acc.AccountId" class="btn btn-warning btn-sm">Edit</a>

                    <form asp-action="Delete" asp-route-id="@acc.AccountId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure to delete this account?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
